<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/mall_more_item"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dip"
    android:layout_weight="1"
    android:background="@drawable/pressed_color"
    android:clickable="true"
    android:minHeight="60.0dip"
    android:padding="5.0dip" >

    <ImageView
        android:id="@+id/mall_more_logo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="12.0dip"
        android:paddingRight="12.0dip"
        android:scaleType="fitCenter"
        android:src="@drawable/default_goods" />

    <TextView
        android:id="@+id/mall_more_profit"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/mall_more_logo"
        android:gravity="center"
        android:textColor="#ff999999" />

</RelativeLayout>