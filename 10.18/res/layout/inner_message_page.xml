<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@color/taobao_rebate_back"
   >
    <View 
        android:id="@+id/inner_message_page_no_mean"
        android:layout_width="fill_parent"
        android:layout_height="15dip"
        android:background="@color/hyaline"/>
    <ListView 
        android:layout_below="@id/inner_message_page_no_mean"
        android:divider="#00000000"
        android:dividerHeight="1dip"
        android:layout_gravity="center"
        android:clickable="true"
        android:id="@+id/income_list"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginLeft="10dip"
        android:layout_marginRight="10dip"
        android:cacheColorHint="#00000000">
    </ListView>
    <RelativeLayout 
        android:layout_alignParentBottom="true"
        android:id="@+id/inner_message_page_hidden"
        android:layout_width="fill_parent"
        android:layout_height="50dip"
        android:background="@color/message_page_buttom"
        android:visibility="gone"
        >
         <CheckBox
            android:id="@+id/isquanxuan"
            android:paddingTop="15dip"
            android:paddingBottom="15dip"
            android:paddingLeft="9dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="7dip"
            style="@style/CustomCheckboxTheme"
             />
         <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#00000000"
           android:layout_toRightOf="@id/isquanxuan"
             android:textSize="16dip"
            android:layout_centerVertical="true"
             android:layout_marginTop="16dip"
            android:text="全选" />
         
          <Button 
             android:id="@+id/zhanneiinfo_delete_bt"
            android:layout_width="wrap_content"
            android:layout_height="33dip"
            android:paddingLeft="10dip"
            android:paddingRight="10dip"
            android:layout_centerInParent="true"
             android:gravity="center"
             android:textColor="@color/white"
             android:textSize="20sp"
             android:background="#D82728"
            android:text="删 除"
            />
    </RelativeLayout>
</RelativeLayout>

