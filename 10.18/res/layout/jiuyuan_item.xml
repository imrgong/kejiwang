<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/jiu_item_bt"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/pressed_color"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:minHeight="60.0dip"
        android:padding="5.0dip" >

        <ImageView
            android:id="@+id/jiu_goods_picture"
            android:layout_width="fill_parent"
            android:layout_height="110dip"
            android:scaleType="fitXY"
            android:src="@drawable/default_goods" />

        <Button
            android:id="@+id/ispost"
            android:layout_width="25dip"
            android:layout_height="20dip"
            android:layout_alignParentRight="true"
            android:layout_alignParentTop="true"
          
            android:background="@drawable/ispost"
            android:text="包邮"
            android:textColor="@color/white"
            android:textSize="12dip" />

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="20dip"
            android:layout_alignBottom="@id/jiu_goods_picture"
            android:background="@drawable/jiu_item_price_bg"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/jiu_item_price"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:maxLines="1"
                android:text="￥268.0"
                android:textColor="@color/white"
                android:textSize="12dip" />

            <TextView
                android:id="@+id/jiu_item_rebate"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="48dip"
                android:layout_weight="1"
                android:maxLines="1"
                android:text="有返利"
                android:textColor="@color/white"
                android:textSize="12dip" />
        </LinearLayout>
    </RelativeLayout>

    <TextView
        android:id="@+id/jiu_goods_name"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:ellipsize="end"
        android:gravity="center|left"
        android:maxLines="2"
        android:text="这里是淘宝商品的名字"
        android:textColor="#212729"
        android:textSize="12dip" />

</LinearLayout>