<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="48dip"
    android:background="@drawable/title_bg"
    android:orientation="horizontal" >

   
    <ImageView
        android:layout_marginTop="7dip"
        android:id="@+id/logo_icon1"
        android:layout_width="106dip"
        android:layout_height="35dip"
        android:layout_marginRight="20dip"
        android:src="@drawable/cosji_logo1" />
         

    <ImageView
        android:id="@+id/title_name"
        android:layout_width="85dip"
        android:layout_height="25dip"
        android:layout_centerInParent="true"
        android:layout_marginLeft="20dip"
        android:layout_marginRight="20dip"
     
       />
  <ImageView
        android:id="@+id/menu_view"
        android:clickable="true"
        android:layout_width="48dip"
        android:layout_height="fill_parent"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:padding="13dip"
        android:background="@drawable/press_changed"
    />
   
  <View
        android:id="@+id/line0"
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/menu_view"
        android:background="@color/title_diliverright" />
 
    <View
        android:layout_width="1px"
        android:layout_height="fill_parent"
        android:layout_toLeftOf="@id/line0"
        android:background="@color/title_diliverleft" />

   
   

</RelativeLayout>