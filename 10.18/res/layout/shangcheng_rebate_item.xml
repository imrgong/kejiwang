<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <RelativeLayout 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/taobao_rebate_item_back">
        
        <LinearLayout
            android:layout_marginLeft="10dip"
            android:layout_marginTop="8dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/deal_time"
                android:textSize="11sp"
                android:textColor="#8B8B8B"/>
            <TextView 
                android:id="@+id/deal_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:textSize="11sp"
                android:textColor="#8B8B8B"
                android:text="2013-05-15 14:25:03"
                />
        </LinearLayout>
        
         <RelativeLayout
            android:layout_marginLeft="10dip"
            android:layout_marginTop="28dip"
            android:layout_marginRight="12dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            
             <TextView 
                android:id="@+id/shangcheng_goods_ordernum"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5.5dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:text="订单号:456852147W"
                android:textSize="11sp"
                android:maxLines="1"
                android:textColor="#494949"/>
            
            <TextView 
                android:id="@+id/shangcheng_goods_introduce"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/shangcheng_goods_ordernum"
                android:layout_marginTop="1.5dip"
                android:layout_marginLeft="8dip"
                android:layout_marginRight="8dip"
                android:text="下单商城:中国新蛋"
                android:textSize="11sp"
                android:maxLines="1"
                android:textColor="#494949"/>
            <TextView 
                android:id="@+id/shangcheng_goods_number"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="2.5dip"
                android:layout_below="@id/shangcheng_goods_introduce"
                android:layout_marginLeft="8dip"
                android:textSize="11sp"
                android:textColor="#494949"
                android:text="成交数量:8"
                />
           
        </RelativeLayout>
        
          <LinearLayout
            android:layout_marginLeft="11dip"
            android:layout_marginTop="111dip"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
               <TextView 
                android:id="@+id/shangcheng_goods_price"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dip"
                android:textSize="11sp"
                android:textColor="#494949"
                android:text="单价:￥10.80"
                />
               
            <TextView 
                android:layout_marginLeft="125dip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="返利"
                android:textSize="12sp"
                android:textColor="#474747"/>
            <TextView 
                android:id="@+id/rebate_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:textSize="12sp"
                android:textColor="#CD766F"
                android:text="0.50元"
                />
            <!-- 
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35dip"
                android:text="奖励积分  :"
                android:textSize="12sp"
                android:textColor="#474747"/>
            <TextView 
                android:id="@+id/reward_jifen"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="4dip"
                android:textSize="12sp"
                android:textColor="#397C37"
                android:text="15点"
                />
                 -->
        </LinearLayout>
        
    </RelativeLayout>

</LinearLayout>
