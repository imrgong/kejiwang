<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/goods_item"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/product_icon"
        android:layout_width="95.0dip"
        android:layout_height="95.0dip"
        android:layout_alignParentLeft="true"
        android:layout_margin="5.0dip"
        android:scaleType="centerCrop"
        android:src="@drawable/default_goods" />

    <TextView
        android:id="@+id/product_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/product_icon"
        android:layout_margin="5dip"
        android:layout_toRightOf="@id/product_icon"
        android:text="你是啥意思呢？我不明吧啊。这里是什么地方？"
        android:ellipsize="end"
        android:maxLines="2"
        android:textSize="14dip" />

    <TextView
        android:id="@+id/product_price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:text="￥118.00"
        android:layout_marginLeft="5.0dip"
        android:layout_marginBottom="2.0dip"
        android:layout_toRightOf="@id/product_icon"
        android:textColor="@color/red"
        android:textSize="14dip" />

    <TextView
        android:id="@+id/product_money_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_name"
        android:layout_marginLeft="15.0dip"
        android:layout_alignBottom="@id/product_price"
        android:text="有返利"
        android:layout_toRightOf="@id/product_price"
        android:textColor="#32CD32"
        android:textSize="14dip" />
    
    <!-- 
    <ImageView 
        android:id="@+id/rebate_question"
        android:layout_marginLeft="5.0dip"
        android:layout_toRightOf="@id/product_money_save"
        android:layout_alignBottom="@id/product_money_save"
        android:layout_marginBottom="2.5dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/rebatedital"/> -->
    
    <TextView 
        android:id="@+id/rebate_explain"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/product_price"
        android:textIsSelectable="false"
        android:visibility="gone"
        android:layout_marginLeft="5.0dip"
        android:layout_toRightOf="@id/product_icon"
        android:layout_marginBottom="1.5dip"
        android:text="返利会正常发放，具体金额以到账时为准"
        android:textSize="10sp"
        />

    <TextView
        android:id="@+id/product_selt"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@id/product_icon"
        android:layout_marginBottom="5.0dip"
        android:text="最近售出10件"
        android:layout_marginLeft="5.0dip"
        android:layout_toRightOf="@id/product_icon"
        android:ellipsize="end"
        android:maxLines="1"
        android:textColor="#ff999999"
        android:textSize="12dip" />

</RelativeLayout>